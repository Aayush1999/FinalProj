<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00B8A4A4"
    tools:context=".FeverMed">

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C2A0A0"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="203dp"
            android:layout_height="335dp"
            android:translationX="100sp"
            app:srcCompat="@drawable/paracetamol" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="162dp"
            android:layout_height="62dp"
            android:text="Fever Meds"
            android:textColor="#030303"
            android:textSize="24sp"
            android:translationX="140sp"
            android:translationY="-300sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="184dp"
            android:layout_height="162dp"
            android:translationX="100sp"
            android:translationY="-160sp"
            app:srcCompat="@drawable/tylenol" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="313dp"
            android:layout_height="91dp"
            android:translationX="50sp"
            android:translationY="-150sp"
            app:srcCompat="@drawable/nurofen" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="327dp"
            android:layout_height="88dp"
            android:translationX="50sp"
            android:translationY="-125sp"
            app:srcCompat="@drawable/aspirin" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>